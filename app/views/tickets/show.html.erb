<div id='ticket'>
  <h2><%= @ticket.title %></h2>
  <%= link_to "Edit Ticket", [:edit, @project, @ticket] %>
  <%= simple_format(@ticket.description) %>
  <br><small>Created by <%= @ticket.user.email %></small>
  <%= link_to "Delete Ticket", [@project, @ticket], :method => :delete, :confirm => "Are you sure you want to delete this ticket ?" %>
</div>
<h3>Comments</h3>
<div id='comments'>
  <% if @ticket.comments.exists? %><co id='ch10_191_1' />
    <%= render @ticket.comments.select(&:persisted?) %>
  <% else %>
    There are no comments for this ticket.
  <% end %>
</div>
<%= render "comments/form" %>
